<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_size_15dp"
        android:layout_marginBottom="@dimen/common_size_10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common_size_14sp"
            app:layout_constraintEnd_toEndOf="@id/tvDate"
            app:layout_constraintStart_toStartOf="@id/tvDate"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Wednesday" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_5dp"
            android:layout_marginEnd="@dimen/common_size_30dp"
            android:background="@drawable/bg_booking_date"
            android:gravity="center_horizontal"
            android:padding="@dimen/common_size_10dp"
            android:paddingVertical="@dimen/common_size_10dp"
            android:textColor="@color/color_1C2A3A"
            android:textSize="@dimen/common_text_size_14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDayOfWeek"
            tools:text="20/11/2024" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
