<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/string_padding_loadmore">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_size_30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_loadmore_indicator"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_size_20dp"
        android:paddingRight="@dimen/common_size_20dp">

        <ImageView
            android:id="@+id/ivLoadingArrow"
            android:layout_width="@dimen/common_size_20dp"
            android:layout_height="@dimen/common_size_20dp"
            android:layout_marginEnd="@dimen/common_size_10dp"
            android:src="@drawable/ic_load_more"
            app:tint="@color/color_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loadmore_message"
            android:textColor="@color/black"
            android:textSize="@dimen/common_size_16sp" />
    </LinearLayout>
</LinearLayout>