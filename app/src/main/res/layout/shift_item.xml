<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/clShift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_size_20dp"
        android:background="@drawable/bg_shift"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvShift"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@id/cbShift"
            android:padding="@dimen/common_size_10dp"
            android:text="08:00 AM - 17:00 PM, Wednesday, 12-12-2024"
            android:textColor="@color/color_1C2A3A"
            android:textSize="@dimen/common_text_size_16sp"
            android:textStyle="bold"
            />

        <CheckBox
            android:id="@+id/cbShift"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            app:layout_constraintStart_toEndOf="@id/tvShift"
            />

    </LinearLayout>

</layout>
